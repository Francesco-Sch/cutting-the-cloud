---
// Styles
import "../styles/index.css";
// Components
import Header from "../components/Header.astro";

const { frontmatter } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>What's Worth - {frontmatter.title}</title>
	</head>
	<body>
		<Header />

		<main
			class="main max-w-none p-2 md:p-3 2xl:p-4"
		>
			<slot />
		</main>
	</body>
</html>

<style lang="postcss" is:global>
	/* Porse settings */
	.main {
		@apply prose prose-headings:max-w-3xl prose-headings:mx-auto prose-p:max-w-3xl prose-p:mx-auto prose-p:text-lg prose-blockquote:max-w-3xl prose-blockquote:mx-auto prose-table:max-w-3xl prose-table:mx-auto
	}
</style>